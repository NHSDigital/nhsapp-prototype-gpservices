{% set headingLevel = params.headingLevel if params.headingLevel else 2 %}

<div class="app-section-title {%- if params.classes %} {{ params.classes }}{% endif %}">
  <h{{ headingLevel }} class="nhsuk-heading-s app-section-title__heading">
    {{ params.title }}
  </h{{ headingLevel }}>
  {%- if params.URL %}
  <p class="app-section-title__link">
    <a href="{{ params.URL }}" class="nhsuk-link--no-visited-state">{%- if params.linkText %}{{ params.linkText }}{% else %}View all{% endif %}
      <span class="nhsuk-u-visually-hidden">{{ params.hiddenText }}</span>
    </a>
  </p>
  {%- endif %}
</div>