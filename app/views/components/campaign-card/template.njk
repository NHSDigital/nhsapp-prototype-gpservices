<div class="nhsuk-card app-card--blue app-u-full-width-tablet">
  <div class="nhsuk-card__content app-card__content">
    <h2 class="nhsuk-card__heading nhsuk-heading-m nhsuk-u-margin-bottom-1 nhsuk-u-padding-top-5">{{ params.title }}</h2>
    <p class="nhsuk-card__description">{{ params.description }}</p>
    <a class="nhsuk-button nhsuk-button--reverse app-button" href="{{ params.url }}}">
      {{ params.linkText }}
      {%- if params.hiddenText %}<span class="nhsuk-u-visually-hidden">{{ params.hiddenText }}</span>{% endif %}
    </a>
  </div>
</div>